<!DOCTYPE html>
<html lang="en">
<%- include('./partials/header.ejs') %> 
<body class="container">
  <%- include('./partials/nav.ejs') %> 
    <div class="login-form col-md-6 offset-3 bg-white">
        <form action="/auth/login" method="POST">
            <div class="form-group">
                <div class="logo">
                    LOGO
                </div>
            </div>
            <div class="form-group">
                <%- include('partials/messages.ejs') %> 
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input class="form-control" type="email" name="email" id="email" required autocomplete />
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input class="form-control" type="password" name="password" id="password" required />
            </div>
            <div class="form-group">
            <button type="submit" name="loginButton" class="btn btn-success fs-5 p-10 w-25">
                Login
            </button>
            </div>
        </form>
        
        <div class="third-party-login">
           <h4 class="text-center my-4">Login using</h4>
            <a href="/auth/google" class="google-btn">Google+</a>
            <a href="/auth/facebook" class="facebook-btn">Facebook</a>
            
        </div>
    </div>



<%- include('./partials/footer.ejs') %> 
</body>
</html>