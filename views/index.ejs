<!DOCTYPE html>
<html lang="en">
<%- include('./partials/header.ejs') %> 

<body>
    <div class="container">
        <%- include('./partials/nav.ejs') %>
        <div class="row">
            <div>
            <h2>Home Page</h2>
            <img src="<%= user.thumbnail%>" alt="Profile Picture"/>
            <p>This is home page! Welcome <%= user.id %> </p>
            <input type="hidden" value='<%= user.id %>' id="userId"/>
        </div>
        </div>

        <div class="row justify-content-end">
            <div class="search-form col-4">
                <form action="/search" method="POST">
                    <input type="search" name="search" id="search" placeholder="Search people and friends" class="form-control"/>
                </form>
            </div>

        </div>
        <% if(user.accountType == "instructor"){ %> 
        <div class="row justify-content-center">
            <div class="col-4">
                <button class="btn btn-primary" id="startMeeting">Start Meeting</button>
            </div>
           

        </div>
        <% } %> 
            

            
    </div>

    
<%- include('./partials/footer.ejs') %> 


</body>
<script>
    const socket = io();
       const userid = $('#userId').val();
       socket.on('connect',(data)=>{
           socket.emit('storeClientInfo', userid);
       });
</script>
<script src="/js/meeting.js"></script>
</html>