<!DOCTYPE html>
<html lang="en">
<%- include('partials/header.ejs') %> 
<body class="container">
    <%- include('partials/nav.ejs') %> 
    <div class="register-form col-md-6 offset-3 bg-white">
        
        <form action="/auth/register" method="POST">
           
            <div class="form-group">
                <div class="logo">
                    LOGO
                </div>
            </div>
            <div class="form-group text-danger">
                <%- include('partials/messages.ejs') %> 
            </div>
            <div class="row">
                <div class="form-group col-6">
                    <label for="firstname">First Name</label>
                    <input class="form-control" type="text" name="firstname" id="firstname" value="<%= typeof firstname!= 'undefined'? firstname:''%>" required />
                   
                </div>
                <div class="form-group col-6">
                    <label for="lastname">Last Name</label>
                    <input class="form-control" type="text" name="lastname" id="lastname" value="<%= typeof lastname!= 'undefined'? lastname:''%>" required />
                </div>
            </div>
            <div class="form-group">
                <label for="username">Username</label>
                <input class="form-control" type="text" name="username" id="username" value="<%= typeof username!= 'undefined'? username:''%>" required />
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input class="form-control" type="email" name="email" id="email" value="<%= typeof email!= 'undefined'? email:''%>" required />
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input class="form-control" type="password" name="password" id="password" required />
            </div>
            <div class="form-group">
                <label for="confirmpassword">Confirm Password</label>
                <input class="form-control" type="password" name="confirmpassword" id="confirmpassword" required />
            </div>
            <div class="form-group">
                <label for="accountyype">Account Type</label>
                <select class="form-select" aria-label="Default select example" name="accounttype" id="accounttype">
                    <option selected>-options-</option>
                    <option value="student">Student</option>
                    <option value="instructor">Instructor</option>
                  </select>
            </div>
            <div class="form-group">
            <button type="submit" name="loginButton" class="btn btn-success w-50 my-3">
                Register
            </button>
            <a href="/auth/login" class="">Already Registered?</a>
            </div>
        </form>
        
        
    </div>



<%- include('./partials/footer.ejs') %> 
</body>
</html>